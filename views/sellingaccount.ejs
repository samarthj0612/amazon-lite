<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="Samarth Jain" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Selling Account</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />
    <link rel="stylesheet" href="./stylesheets/sellingaccount.css" />
  </head>

  <body>
    <div id="sj-main">
      <div id="overlay">
        <form id="addproduct" action="/addproduct" method="post" class="w-50" enctype="multipart/form-data" >
          <div class="input-group mb-3">
            <span class="input-group-text w-25" id="basic-addon1" >Product Name</span >
            <input type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1" name="productname" />
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text w-25">Product Price</span>
            <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" name="productprice" />
            <span class="input-group-text">.00/- Rupees</span>
          </div>

          <div class="input-group mb-3">
            <input type="number" class="form-control" placeholder="Discount" aria-label="Recipient's username" aria-describedby="basic-addon2" name="discount" />
            <span class="input-group-text" id="basic-addon2">% off</span>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text w-25" id="basic-addon1" >Product Image</span >
            <input type="file" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1" name="productpic" />
          </div>

          <div class="input-group">
            <span class="input-group-text w-25">Details about product</span>
            <textarea class="form-control" aria-label="With textarea" rows="3" name="productdetails" ></textarea>
          </div>

          <i id="backbtn" class="ri-arrow-go-back-line btn btn-outline-light px-5 mt-3" ></i>
          <input type="submit" value="Add Product" class="btn btn-primary w-50 mt-3 float-end" />
        </form>
      </div>

      <nav class="bg-dark text-light">
        <a href="/profile"><i class="ri-arrow-go-back-line"></i></a>
        <h1>Your selling products</h1>
      </nav>

      <div id="sellingproducts" class="container">
        <button id="addproductbtn" class="btn btn-outline-dark px-5 d-flex justify-content-center align-items-center" >
          Add<i class="ri-add-line ms-1"></i>
        </button>

        <% products.forEach(function(product){ %>
          <div id="card" class="card" style="width: 18rem">
            <img src="./images/productpics/<%= product.productpic %>" class="card-img-top" alt="..." style="height: 287px; width: 287px; object-fit: cover" />
            <div class="card-body">
              <h5 class="card-title"><%= product.productname %></h5>
              <p class="card-text"><%= product.productdetails %></p>
              <a href="#" class="btn btn-primary"><%= product.productprice %></a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous" ></script>
    <script src="./javascripts/sellingaccount.js"></script>
  </body>
</html>
