          </span>

          <span>
            <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" alt="" />
            <h5>Shoes</h5>
          </span>
        </div>
      </div>

      <div id="products" class="container mt-5">
        <% products.forEach(function(product){ %>
          <div class="card mb-3" style="width: 100%">
            <div class="row g-0">
              <div class="col-md-2">
                <img id="productimg" src="./images/productpics/<%= product.productpic %>" alt="..." />
              </div>

              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= product.productname %></h5>
                  <p class="card-text"><%= product.productdetails %></p>
                  <h5 class="card-text py-0 d-inline"> Price : <%= product.productprice %> </h5> <br />
                  <h6 class="card-text py-0">
                    <small class="text-muted" ><%= product.discount %> % off</small >
                  </h6>
                  <div class="w-100 d-flex justify-content-between align-items-center" >
                    <span class="card-text py-0">
                      <small class="text-muted" >Seller : <%= product.owner.username %></small >
                    </span >
                    <br />
                    <button id="addtocart" class="<%= product._id %> btn btn-danger px-4" > Add to cart </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div id="offers">
        <h1>Today's offers</h1>
        <div>
          <img src="./images/phone.jpg" alt="" />
        </div>
        <div>
